{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"]
  },
  "references": [
    {
      "maplibre-gld": "/"
    }
  ],
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["dist/**/*", "node_modules/**/*"]
}
